= simple_form_for [:admin, test],
                  url: update_inline_admin_test_path(test),
                  local: true,
                  html: { class: 'form-inline hide justify-content-between' },
                  data: { test_id: test.id } do |f|
  / replace simple_form error-control for the outer one
  = f.input :title, as: :string, label: false, class: 'form-control', error: false

  = f.button :submit, t('.submit'), class: 'btn-primary btn-sm'
