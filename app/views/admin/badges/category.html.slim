.row.justify-content-center.my-4
  .col-sm-8.lg-6
    .card.border-secondary
      .card-header
        h3.text-center = t('admin.badges.new.category')
      .card-body
        = simple_form_for [:admin, @badge], local: true do |f|
          = f.input :title
          = f.input :description
          = f.input :filename
          = f.input :rule_name, as: :hidden, input_html: { value: 'category' }

          = f.input :rule_param, label: t('.test_category'), collection: Category.all, value_method: :id, label_method: :title

          = f.button :submit, class: 'btn btn-dark'
