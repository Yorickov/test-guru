doctype html
html
  head
    title #{t('.title')} | TestGuru
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

  body
    = render 'admin/navi'
    = show_flash unless flash.empty?

    .container
      = yield
